@using BrokerPremium.Core.Models
@model IEnumerable<CustomerListViewModel>

<a class="navbar-brand" asp-area="" asp-controller="Customer" asp-action="CustomerList">BrokerPremium</a>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Customers</h3>
                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <!--<th>Customer</th>-->
                            <th>Identificator</th>
                            <th>Name</th>
                            <th>IsCompany</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model)
                        {
                            <tr>
                                <td>@customer.Identificator</td>
                                <td>@customer.Name</td>
                                <td>@customer.IsCompany</td>
                                <td>
                                    <a asp-area="" asp-action="EditCustomer" asp-controller="Customer" asp-route-id="@customer.Id" class="btn btn-block btn-outline-info btn-xs">Edit</a>
                                    <a asp-area="" asp-action="Policies" asp-controller="Customer" asp-route-id="@customer.Id" class="btn btn-block btn-outline-warning btn-xs">Policies</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>